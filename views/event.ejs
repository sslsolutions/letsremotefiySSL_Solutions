  <script>
    // Set the target date for the countdown
    var targetDate = new Date('2023-12-31 23:59:59').getTime();

    // Update the countdown every second
    var countdownInterval = setInterval(function () {
      var currentDate = new Date().getTime();
      var timeLeft = targetDate - currentDate;

      if (timeLeft <= 0) {
        clearInterval(countdownInterval);
        for (var i = 0; i < 8; i++) {
          document.getElementById("days-ten-digit").innerHTML = "0";
          document.getElementById("days-unit-digit").innerHTML = "0";
          document.getElementById("hours-ten-digit").innerHTML = "0";
          document.getElementById("hours-unit-digit").innerHTML = "0";
          document.getElementById("minutes-ten-digit").innerHTML = "0";
          document.getElementById("minutes-unit-digit").innerHTML = "0";
          document.getElementById("seconds-ten-digit").innerHTML = "0";
          document.getElementById("seconds-unit-digit").innerHTML = "0";
        }
      } else {
        var days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
        var hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        var minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
        var seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

        document.getElementById("days-ten-digit").innerHTML = Math.floor(days / 10);
        document.getElementById("days-unit-digit").innerHTML = days % 10;
        document.getElementById("hours-ten-digit").innerHTML = Math.floor(hours / 10);
        document.getElementById("hours-unit-digit").innerHTML = hours % 10;
        document.getElementById("minutes-ten-digit").innerHTML = Math.floor(minutes / 10);
        document.getElementById("minutes-unit-digit").innerHTML = minutes % 10;
        document.getElementById("seconds-ten-digit").innerHTML = Math.floor(seconds / 10);
        document.getElementById("seconds-unit-digit").innerHTML = seconds % 10;
      }
    }, 1000); // Update every 1 second
  </script>
