  <title>Forgot Password Page</title>
</head>

<body>
  <!-- Button to Open the Forgot Password Modal -->
 
  <form id="emailForm" action="/forgetPassword" method="post">
      <label for="email">Enter Email:</label>
      <input type="email" class="form-control col-4" id="email" name="email" required placeholder="Enter Email" />
      <div class="invalid-feedback">
        Please enter a valid email address.
      </div>
    <button type="submit" class="btn btn-success mt-3" id="checkEmail">
      Submit
    </button>
  </form>
  <!-- Forgot Password Modal -->


