    <script>

        // ----------------------------  SELECT ONE FIELD OUT OF THREE  -----------------------------
        function handleRadioSelection(containerClass, resultClass) {
            const container = document.querySelector('#' + containerClass);
            const resultDiv = document.querySelector('#' + resultClass);
            const radioInputs = container.querySelectorAll('input[type="radio"]');

            radioInputs.forEach(function (input) {
                input.addEventListener('click', function () {
                    radioInputs.forEach(function (input) {
                        input.parentNode.style.backgroundColor = '';
                        input.parentNode.style.border = '1px solid #ccc';
                    });

                    if (input.checked) {
                        input.parentNode.style.backgroundColor = 'lightgray';
                        input.parentNode.style.border = '1px solid black';
                        resultDiv.textContent = 'Selected value: ' + input.value;
                    } else {
                        resultDiv.textContent = '';
                    }
                });
            });
        }

        // Call the function for each set of radio buttons
        handleRadioSelection('radio-container', 'result-container');
        handleRadioSelection('radio-container-2', 'result-container-2');
        // ----------------------       PDF SELECT FILELD  ---------------------
        const container = document.getElementById('container');
        const fileInput = document.getElementById('file-upload');
        const checkmark = document.querySelector('.checkmark');
        const fileNameDisplay = document.querySelector('.file-name');

        container.addEventListener('click', () => {
            fileInput.click();
        });

        container.addEventListener('dragover', (e) => {
            e.preventDefault();
            container.style.border = '2px dashed #e74c3c';
        });

        container.addEventListener('dragleave', () => {
            container.style.border = '2px dashed #3498db';
        });

        container.addEventListener('drop', (e) => {
            e.preventDefault();
            container.style.border = '2px dashed #3498db';

            const droppedFiles = e.dataTransfer.files;
            if (droppedFiles.length === 1 && droppedFiles[0].type === 'application/pdf') {
                fileInput.files = droppedFiles;
                checkmark.style.display = 'inline'; // Show the checkmark
                fileNameDisplay.textContent = droppedFiles[0].name;
                fileNameDisplay.style.display = 'block'; // Show the file name
                // You can also handle the selected file here or submit the form
                console.log('Dropped file:', droppedFiles[0].name);
            } else {
                alert('Please drop a single PDF file.');
            }
        });

        fileInput.addEventListener('change', () => {
            // Do something with the selected file if needed
            console.log('Selected file:', fileInput.files[0].name);
            checkmark.style.display = 'inline'; // Show the checkmark
            fileNameDisplay.textContent = fileInput.files[0].name;
            fileNameDisplay.style.display = 'block'; // Show the file name
        });

